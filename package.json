{
  "name": "playwright-ts-demo",
  "version": "1.0.0",
  "description": "End-to-end test automation framework using Playwright and TypeScript with Page Object Model pattern",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "VerifyLoginFunctionality": "npx playwright test ./tests/Login.spec.ts",
    "VerifyProjectFunctionality": "npx playwright test ./tests/Project.spec.ts",
    "test:headed": "npx playwright test --headed",
    "test:chromium": "npx playwright test --project=Chromium",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report"
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e-testing",
    "automation",
    "page-object-model"
  ],
  "author": "Apurva",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright": "^1.56.1"
  }
}
